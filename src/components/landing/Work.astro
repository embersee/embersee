---
import ProjectCard from "../ProjectCard.astro";
import Spacer from "../Spacer.astro";
---

<section
  id="work"
  class="bg-black lg:max-w-7xl text-white mx-auto outline-container transition-all scroll-mt-16"
>
  <div
    class="md:flex my-10 justify-center items-stretch gap-6 space-y-6 md:space-y-0"
  >
    <div class="flex-1 text-babyblue">
      <div class="outline-container stripped flex items-center">
        <h1 class="bg-black px-4 py-10">Featured Work ðŸ’»</h1>
      </div>
    </div>
    <div class="md:w-[40%] text-matcha">
      <div class="outline-container dotted py-10">
        <p class="bg-black outline-container">
          I love storytelling and exploring unique design interface. Here are
          some exciting project and explorations that I have done.
        </p>
      </div>
    </div>
  </div>

  <Spacer />

  <div class="md:flex gap-6">
    <ul class="flex-1 space-y-4 text-yellow-300">
      <ProjectCard
        title="Spectrier"
        desc="E-commerce Telegram WebApp bot with a management system."
        href="https://github.com/embersee/spectrier"
        stack={["Next", "Typescript", "Tailwind", "tRPC", "Prisma"]}
      />

      <ProjectCard
        title="Embersee"
        desc="This portfolio website."
        stack={["Astro"]}
      />

      <ProjectCard
        title="Spectrier"
        desc="E-commerce Telegram WebApp bot with a management system."
        wip
      />
    </ul>
    <div class="md:w-[40%] stripped">
      <div class="bg-black h-full m-4 p-4">
        <h2>My Tech Stack / Education / Employment</h2>
        <ul>
          <li>Next</li>
          <li>Next</li>
          <li>Next</li>
        </ul>
      </div>
    </div>
  </div>

  <style>
    h1 {
      @apply font-bold text-5xl text-white;
    }

    h2 {
      @apply font-bold text-2xl text-white;
    }

    p {
      @apply font-light text-base  text-white;
    }
  </style>
</section>
