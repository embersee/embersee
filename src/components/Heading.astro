---
import type { HTMLAttributes } from "astro/types";
interface Props {
  title: string;
  subtitle?: string;
  primary: HTMLAttributes<"div">["class"];
  secondary: HTMLAttributes<"div">["class"];
  index: number;
}
const { title, subtitle, primary, secondary, index } = Astro.props;
---

<div
  class="md:flex justify-center items-center gap-6 space-y-6 md:space-y-0"
  transition:name=`heading-${index}`
>
  <div class={primary + ` flex-1 outline-container hashed`}>
    <h1>{title}</h1>
  </div>
  <div class={secondary + ` group md:w-[40%] outline-container dotted py-8`}>
    <p class="text-justify">
      {subtitle}
    </p>
  </div>
</div>
