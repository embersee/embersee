---
import BaseHead from "@/components/utils/BaseHead.astro";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} />
  </head>
  <body class="mx-auto bg-background text-foreground">
    <main class="mx-auto snap-container">
      <slot />
    </main>
  </body>
</html>
